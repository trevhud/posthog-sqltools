{
  "name": "posthog-sqltools",
  "displayName": "PostHog SQLTools",
  "publisher": "trevhud",
  "license": "MIT",
  "repository": {},
  "description": "Run queries against your PostHog project with SQLTools",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.84.0"
  },
  "keywords": [
    "driver-template",
    "sqltools-driver"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:sql",
    "onCommand:sqltools.*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "posthog-sqltools.runQuery",
        "title": "Run PostHog Query"
      }
    ],
    "keybindings": [
      {
        "command": "posthog-sqltools.runQuery",
        "key": "cmd+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == 'sql'"
      }
    ],
    "configuration": {
      "title": "PostHog SQLTools",
      "properties": {
        "posthogSqltools.apiKey": {
          "type": "string",
          "default": "",
          "description": "PostHog API Key"
        },
        "posthogSqltools.projectId": {
          "type": "string",
          "default": "",
          "description": "PostHog Project ID"
        }
      }
    },
    "sqltools.drivers": [
      {
        "name": "PostHog",
        "displayName": "PostHog",
        "id": "posthog-api-driver",
        "adapter": "extension",
        "extensionId": "trevhud.posthog-sqltools",
        "icon": "icons/posthog-default.png",
        "iconActive": "icons/posthog-active.png",
        "iconInactive": "icons/posthog-inactive.png"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext .ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.17",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.84.0",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@sqltools/base-driver": "latest",
    "@sqltools/types": "latest",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "uuid": "^9.0.1"
  }
}